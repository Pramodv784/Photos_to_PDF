<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PhotosToPDF" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.PhotosToPDF" parent="Base.Theme.PhotosToPDF" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/red</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Material.Spinner.Underlined">

        <item name="android:popupBackground">@drawable/outline_bg
        </item>

        <item name="android:textAlignment">textStart</item>
    </style>
</resources>